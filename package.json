{
  "name": "root",
  "dependencies": {
    "hoist": "0.0.6"
  },
  "devDependencies": {
    "eslint": "8.40.0",
    "lerna": "6.6.2",
    "prettier": "2.8.8",
    "syncpack": "8.5.14"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 12
    },
    "root": true
  },
  "homepage": "https://gitflic.ru/project/adimitriev/eslint-configs/blob?file=README.md",
  "packageManager": "npm@9.5.1",
  "repository": "https://gitflic.ru/project/adimitriev/eslint-config.git",
  "scripts": {
    "lint": "eslint packages",
    "publish": "lerna publish --yes --no-push",
    "release": "npm run lint && lerna publish"
  },
  "workspaces": [
    "packages/*"
  ]
}
